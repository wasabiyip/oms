extends layout

block content
  .container-fluid
    .row-fluid
      .span3
        .well.sidebar-nav(id="market-watch")
          p 
            i.icon-eye-open
            Market Watch:
            span#market-hora
        .well.sidebar-nav(id="stream")
          table.table.table-striped.table-bordered.table-hover
              thead.stream-tab  
                tr
                  th Symbol
                  th Bid
                  th Ask
              tbody.log  
                each moneda in monedas
                  tr.moneda(id= moneda)
                    td #{moneda}
                      i.icon-chevron-right
                    td.bid(id='high') ------
                    td.ask(id='high') ------
      .span9
        #estrategias.well    
          -var temps = []
            if graficas.length==0
              h1 No hay graficas conectadas :(
            else 
              .tabbable.tabs-below(id="charts-tabs")
                .tab-content
                  -for(var i=0;i<graficas.length;i++){
                    -var temp = graficas[i];
                    -var title = graficas[i][0].toLowerCase();
                    .tab-pane(id=title)
                      .carousel.tab
                        -for(var j=1; j<temp.length; j++){
                          -var row = temp[j]

                          .row-fluid
                            -for(var k=0; k<row.length;k++){
                              -var chart = row[k].setts                              
                              .span6
                                div(id= chart.ID, class="grafica")
                                  .content-graf
                                      .graf-head
                                        .btn-group.pull-right(id="opciones")
                                          a.btn-small.btn.btn-primary.dropdown-toggle(data-toggle='dropdown',href='#') Opciones 
                                            i(id="active")
                                            span.caret
                                          ul.dropdown-menu
                                            li(data-filter-camera-type='all')
                                              a(id="inputs",rel="popover") 
                                                i.icon-list 
                                                span Inputs
                                            li(data-filter-camera-type='all')
                                              a
                                                form  
                                                  input(type="checkbox", name="", value="") 
                                                  span Activo
                                        .graf-header
                                          i.icon-certificate(id="trades")
                                          span #{chart.symbol} #{chart.Periodo}                           
                                      hr
                                      #chart-div
                                        -var id = chart.ID +'-chart'
                                        .chart(id=id)
                            -}                          
                        -}
                  -}
                                  
                ul.nav.nav-tabs(id="charts-tab")
                  -for(var i=0;i<graficas.length;i++){
                    -var symbol = graficas[i][0];
                    -var temp = graficas[i]
                    -var length=0;
                    -for(var j=1;j<temp.length;j++){
                      -length = length +temp[j].length
                    -}
                    
                    -var title = "#"+symbol.toLowerCase();
                    li
                      a(href=title,data-toggle="tab")
                        i.icon-bookmark
                        span #{symbol}(#{length})
                  -}                     
    #terminal
      .well.sidebar-nav(id="terminal-wrap")
        ul.nav.nav-tabs(id='terminal-tab')
          li.active
            a(href="#trade", data-toggle="tab") 
              i.icon-shopping-cart
              span Trade
          li
            a(href="#experts", data-toggle="tab") 
              i.icon-exclamation-sign
              span Experts  
          li
            a(href="#journal", data-toggle="tab") 
              i.icon-info-sign
              span Journal
        #terminal-cont.tab-content
          #trade.tab-pane.active
            table.table.table-striped.table-hover.table-condensed.table-bordered
              thead  
                tr
                  th Order
                  th Tipo
                  th Lotes
                  th Par
                  th Precio
                  th S/L
                  th T/P          
                tbody.log
          #experts.tab-pane
            table.table.table-hover.table-condensed.table-bordered
              thead
                  tr
                    th Time
                    th Message
                tbody.log
                  tr.warning
                    td.time "Mensaje de prueba"
                    td "When you look at the dark side, careful you must be... for the dark side looks back".- Yoda
          #journal.tab-pane
            table.table.table-hover.table-condensed.table-bordered
              thead
                tr
                  th Time
                  th Message
              tbody.log
                tr.warning
                  td.time "Mensaje de prueba"
                  td "Money is the root of all evil today.".- Pink Floyd                 