extends layout

block content
  .container-fluid
    .row-fluid
      .span3
        .well.sidebar-nav(id="market-watch")
          p Market Watch:
            span#market-hora
        .well.sidebar-nav(id="stream")
          table.table.table-striped.table-bordered.table-hover
              thead.stream-tab  
                tr
                  th Symbol
                  th Bid
                  th Ask
              tbody.log  
                each moneda in monedas
                  tr.moneda(id= moneda)
                    td #{moneda}
                    td.bid(id='high') ------
                    td.ask(id='high') ------
      .span9
        #estrategias    
        -var temps = []
          if graficas.length==0
            h1 No hay graficas conectadas :(
          else  
            each grafica in graficas
              -temps.push(grafica.setts)
              if temps.length == 2
                .rowfluid
                  each temp in temps
                    .span6
                      div(id= temp.ID, class="grafica")
                        .content-graf
                            .graf-head
                              .btn-group.pull-right(id="opciones")
                                a.btn-small.btn.btn-primary.dropdown-toggle(data-toggle='dropdown',href='#') Opciones 
                                  span.caret
                                ul.dropdown-menu
                                  li(data-filter-camera-type='all')
                                    a(id="inputs",rel="popover") Inputs
                              h4 #{temp.symbol}                           
                            hr
                            #chart-div
                              -var id = temp.symbol +'-chart'
                              .chart(id=id)
                            
                -temps =[]
    #terminal
      .well.sidebar-nav(id="terminal-wrap")
        ul.nav.nav-tabs(id='terminal-tab')
          li.active
            a(href="#trade", data-toggle="tab") Trade
          li
            a(href="#experts", data-toggle="tab") Experts  
          li
            a(href="#journal", data-toggle="tab") Journal
        #terminal-cont.tab-content
          #trade.tab-pane.active
            table.table.table-striped
              thead  
                tr
                  th Order
                  th Tipo
                  th Lotes
                  th Par
                  th Precio
                  th S/L
                  th T/P          
          #experts.tab-pane
            table.table.table-hover.table-condensed.table-bordered
              thead
                  tr
                    th Time
                    th Message
                tbody.log
                  tr.warning
                    td.time "Mensaje de prueba"
                    td "When you look at the dark side, careful you must be... for the dark side looks back".- Yoda
          #journal.tab-pane
            table.table.table-hover.table-condensed.table-bordered
              thead
                tr
                  th Time
                  th Message
              tbody.log
                tr.warning
                  td.time "Mensaje de prueba"
                  td "Money is the root of all evil today.".- Pink Floyd